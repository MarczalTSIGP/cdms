<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-white border border-black">
    <%= link_to root_path do %>
      <% image_tag 'cdms_icon.png', class: 'header-brand-img', alt: 'Logo' %>
    <% end %>

    <span class="d-lg-block text-muted font-weight-bold">
      <%= t('views.app.title') %>
    </span>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="menu" aria-expanded="true" aria-label="Menu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="menu">
      <ul class="navbar-nav mt-2 mt-lg-0">
        <li class="nav-item mb-2 mb-lg-0">
          <%= active_link_to root_path, class: 'btn btn-primary list-group-item list-group-item-action', active: :exclusive do %>
            <span class="icon mr-3"><i class="fas fa-home"></i></span><%= t("views.links.public.home") %>
          <% end %>
        </li>
        <li class="nav-item mb-2 mb-lg-0">
          <%= active_link_to about_path, class: 'btn btn-primary list-group-item list-group-item-action' do %>
            <span class="icon mr-3"><i class="fas fa-info-circle"></i></span><%= t("views.links.public.about") %>
          <% end %>
        </li>
        <li class="nav-item mb-2 mb-lg-0">
          <%= active_link_to login_path, class: 'btn btn-primary list-group-item list-group-item-action' do %>
            <span class="icon mr-3"><i class="fas fa-user"></i></span><%= t("views.links.public.login") %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
