<% provide(:head_title, t('views.document.links.show')) %>
<% provide(:page_title, t('views.document.links.show')) %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Documento #<%= @document.id %></h3>
  </div>
  <div class="card-body">
    <p>
      <strong><%= t('activerecord.attributes.document.title') %>: </strong>
      <%= @document.title %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.document.category') %>: </strong>
      <%= t("enums.categories.#{@document.category}") %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.document.content') %>:</strong>
      <%= sanitize  @document.content, attributes: %w(style class href target src) %>
    </p>
  </div>
</div>

<div class="d-flex justify-content-between mt-3 footer">
  
  <div>
    <%= link_to t('views.links.back'), users_documents_path, class: 'btn btn-secondary' %>
  </div>
  
  <div>
    <%= link_to t('views.links.public.document_recipients.show'), users_document_recipients_path(@document), class: 'btn btn-secondary ml-auto' %>
    <%= link_to t('views.links.edit'), edit_users_document_path(@document), class: 'btn btn-primary ml-auto' %>
  </div>

</div>
