<div class="modal fade" id="modal_document_justification_<%= document_id.id %>" tabindex="-1" role="dialog" aria-labelledby="SignModalCentere" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Justificativa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>

            <div class="modal-body">


              <%= simple_form_for(:document, url: users_update_edited_document_path(document_id.id), method: :PATCH, remote: true) do |f| %>
                <div class="row">
                    <div class="col-12">
                      <p class="text-left">
                          Ã‰ preciso adicionar uma justificativa ao editar o documento
                      </p>
                    </div>
                    <div class="col-12">
                      <%= f.text_area :justification, :cols => 50, :rows => 5 %>
                    </div>

                    <div class="form-footer">
                      <div class="d-flex">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"> <%= I18n.t('simple_form.buttons.cancel') %> </button>
                        <button type="submit" class="btn btn-primary ml-auto" > <%= I18n.t('simple_form.buttons.save') %> </button>
                      </div>
                    </div>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</div>