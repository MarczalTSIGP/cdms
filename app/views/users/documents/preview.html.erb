<% provide(:head_title, t('views.document.links.preview', category: I18n.t("enums.categories.#{@document.category}"), name: @document.title)) %>

<div class='not-print'>
  <div id='sidebar'>
    <div>
      <span class="text-color-default left-side">
        <%= link_to users_documents_path, class: 'text-color-default' do %>
          <%= icon('fa', 'arrow-left', class: 'icon', data: {toggle: 'tooltip'}, title: t('views.links.back')) %>
        <% end %>
      </span>
      <span class="text-color-default left-side" id="print-message">
              <%= t('views.document.print_label') %>
      </span>
    </div>

    <button onclick="javascript:window.print();" class="text-color-default" id="print-button">
      <span class="fa fa-print fa-2x"> </span>
    </button>
  </div>
</div>

<%= render 'page', text: @document.front_text %>
<%= render 'page', text: @document.back_text %>
