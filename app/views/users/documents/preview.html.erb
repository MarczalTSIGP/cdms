<% provide(:head_title, t('views.document.links.preview', category: I18n.t("enums.categories.#{@document.category}"), name: @document.title)) %>

<%= render 'page', png_data_base64: png_data_base64, verication_code: @document.verification_code, text: sanitize(@document.content, attributes: %w(style class href target src)), show_title: true %>


<hr />

<footer align="center">
  <%= link_to t('views.document.links.print'), users_preview_document_path(@document), class: 'btn btn-primary', remote: true %>
</footer>
