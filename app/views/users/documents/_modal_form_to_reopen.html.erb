<div class="modal fade" id="modal_document_justification_<%= document_id %>" tabindex="-1" role="dialog" aria-labelledby="SignModalCentere" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Justificativa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>

            <div class="modal-body">

              <%= simple_form_for :document, url: users_reopen_document_path(document_id), method: :patch do |f| %>
                <div class="alert alert-info" role="alert">
                  Ao reabrir o documento todas as assinaturas deve ser refeitas.
                </div>

                <%= f.input :justification, label: I18n.t('activerecord.attributes.document.justification'), as: :text %>

                <div class="form-footer">
                  <div class="d-flex">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"> <%= I18n.t('simple_form.buttons.cancel') %> </button>
                    <%= f.button :submit, t('simple_form.buttons.save'), class: 'btn btn-primary ml-auto' %>
                  </div>
                </div>
              <% end %>

            </div>
        </div>
    </div>
</div>
