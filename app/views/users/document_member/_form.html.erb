<div class="row">
    <div class="form-group string required variable_name col-6">
        <label class="string required" for="variable_name"> <%= I18n.t('simple_form.labels.defaults.name') %> <abbr title="<%= I18n.t('simple_form.required.text') %>"><%= I18n.t('simple_form.required.mark') %></abbr></label>
        <input class="form-control string required" type="text" name="name" id="name" data-validations-presence = "true">
        
        <label class="string required" for="variable_name"> <%= I18n.t('simple_form.labels.defaults.email') %> <abbr title="<%= I18n.t('simple_form.required.text') %>"><%= I18n.t('simple_form.required.mark') %></abbr></label>
        <input class="form-control string required" type="text" name="email" id="email" data-validations-presence = "true">
        
        <label class="string required" for="variable_name"> <%= I18n.t('simple_form.labels.defaults.cpf') %> <abbr title="<%= I18n.t('simple_form.required.text') %>"><%= I18n.t('simple_form.required.mark') %></abbr></label>
        <input class="form-control string required" type="text" name="cpf" id="cpf" data-validations-presence = "true">
        
        <div class="form-footer">
            <div class="d-flex">
                <button class='btn btn-primary ml-auto'><%= I18n.t('simple_form.buttons.save') %></button>
            </div>
        </div>
    </div>
</div>