<tr>
  <td><%= link_to admin.name, admins_admin_path(admin) %></td>
  <td><%= admin.email %></td>
  <td><%= admin.username %></td>
  <td><%= admin.register_number %></td>
  <td><%= admin.role.name %></td>
  <td><%= t("views.status.#{admin.active?}") %></td>
  <td>
    <%= link_to edit_admins_admin_path(admin) do %>
      <%= icon('fas', 'edit', class: 'icon', data: { toggle: 'tooltip' }, title: t('views.links.edit')) %>
    <% end %>
    <%= link_to admins_admin_remove_as_admin_path(admin), method: :post, data: { confirm: t('views.prompt.confirm_remove_as_admin') } do %>
      <%= icon('fas', 'user-times', class: 'icon', data: { toggle: 'tooltip' }, title: t('views.admin.links.remove_as_admin')) %>
    <% end %>
  </td>
</tr>
