<section id="document">
  <header>
    <div class="document-header-coat-of-arms">
      <%= image_tag 'documents/brasao-brasil.png', alt: 'UTFPR' %>
    </div>
    <div class="document-header-text">
      Ministério da Educação<br>
      Universidade Tecnológica Federal do Paraná<br>
      Campus Guarapuava<br><br>Departamento de Registros Acadêmicos - DERAC
    </div>
    <div class="document-header-logo">
      <%= image_tag 'documents/logo-utfpr.png', alt: 'UTFPR' %>        
    </div>
  </header>

  <section class="document-body">
    <aside class="document-sidebar"></aside>
    
    <div class="document-content">

      <div class="document-title">
        <h3> <%= I18n.t("enums.categories.#{ @document.category }") %>
          <%= "#{@document.id}/#{@document.created_at.year} - #{@document.department.name}" %>
        </h3>
      </div>

      <%# <%= @document.content.html_safe %>
      <%= sanitize(@document.content) %>

      <% if @document_recipient %>
        <div class="document-recipients">
          <div class="recipients-code">
            <div class="code">
              <%= image_tag("data:image/png;base64,#{@document_recipient.qr_code_base}", alt: "QR Code") %>
            </div>
            <p> A autenticidade deste documento pode ser conferida no site <u> <%= link_to documents_url, documents_url %></u>, informando o código verificador <b><%= @document_recipient.verification_code %></b>.</p>
          </div>
        </div>
      <% else %>
        <div class="document-recipients"></div>
      <% end %>

    </div>
  </section>

  </section>
